<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">



    <!-- #################################### Start Search Section ############################## -->
    <div class="container">
        <h1>User Search</h1>
        <div id="search-wrapper">
            <form>
                <input type="text" name="searchBar" id="searchBar" placeholder="Search for a User" />
                <button id="searchBtn" type="submit">Search</button>
            </form>
        </div>
        <ul id="userList"></ul>
    </div>




    <!-- #################################### Start Search Section ############################## -->


                        <div style="margin-bottom: 30px;">
                            
                            {{#each users as |user|}}
                            <div class="container">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-md-10 mt-5 pt-5">
                                        <div class="row z-depth-3">
                                            <div class="col-sm-4 bg-info rounded-left">
                                                <div class="card-block text-center text-white">
                                                    <i class="fa fa-user-tie fa-7x mt-5"></i>
                                                    <img src="{{user.pict}}" alt="userPic">
                                                    <h2 class="font-weight-bold mt-4">{{user.name}}</h2>
                                                    <a href="#" class="badge badge-info prof_button" u_id="{{user.id}}">Profile</a>
                                                    {{!-- <p>{{user.zip}}</p> --}}
                                                </div>
                                            </div>
                                            <div class="col-sm-8 bg-white rounded-right">
                                                
                                        
                                                {{!-- <h4 class="mt-3">Pets</h4> --}}
                                                
                                                {{#each pets as |pet|}}
                                                <hr class="bg-primary">
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        {{!-- <p class="font-weight-bold">{{#each }}</p> --}}
                                                        <h6 class="text-muted">{{pet.name}}</h6>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <p class="font-weight-bold">Pet Pics</p>
                                                        <img src="{{pet.pict}}" width="200px">
                                                    </div>
                                                </div>
                                                {{/each}}
                                                
                                                
                                                

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- #################################### Start Footer Section ############################## -->
    <footer class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-4">
                <h3>Contact Us</h3>
                <br>
                <h4>Pretend Office address would go here</h4>
            </div>
            <div class="col-sm-4">
                <h3>Connect</h3>
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>
                <a href="#" class="fa fa-google"></a>
                <a href="#" class="fa fa-instagram"></a>
                <a href="#" class="fa fa-youtube"></a>

            </div>

            <div class="col-sm-4">
                <img src="/public/img/logo.png" class="icon" alt="Woofer Logo">

            </div>
        </div>
    </footer>

    <!-- #################################### End Footer Section ############################## -->

    


<script src="/js/search.js"></script>
<script>
    var profButtons = document.querySelectorAll('.prof_button');
    profButtons.forEach(button => {
        button.addEventListener('click', (event) => {
            location.replace(`/userProfile/${event.target.getAttribute('u_id')}`);
        });
    })
</script>

