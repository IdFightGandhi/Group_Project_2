<div class="container">    
            <div class="row">
                <div class="col-md-4 mt-1">
                    <div class="card text-center sidebar">
                        <div class="card-body">
                            <img src="{{pict}}" class="rounded-circle" width="150" alt="Profile Pic">
                            <div class="mt-3">
                                <h3>{{name}}</h3>
                                <button type="button" class="btn btn-danger" id="logOutLink">Log Out</button>
                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">Edit Info</button>
                                <button type="button" class="btn btn-info uploadButton" id="">Upload Picture</button>
                            </div>
                            <div>
                                <h3>Friend Requests</h3>
                                <ul class="list-group">
                                    {{#each frs as |fr|}}
                                    {{> friendRequest}}
                                    {{/each}}
                                </ul>
                            </div>
                            <div>
                                <h3>Friends</h3>
                                <ul class="list-group">
                                    {{#each friends as |friend|}}
                                    {{> friendItem}}
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 mt-1">
                    <div class="card mb-3 content">
                        <div class="card-body">
                            <div class="row">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Email</h5>
                                    </div>
                                    <div class="col-md-9 text-secondary">
                                        {{email}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Zip Code</h5>
                                    </div>
                                    <div class="col-md-9 text-secondary">
                                        {{zip}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Age</h5>
                                    </div>
                                    <div class="col-md-9 text-secondary">
                                        {{age}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Bio</h5>
                                    </div>
                                    <div class="col-md-9 text-secondary">
                                        {{bio}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- <div class="card mb-3 content">
                            <h1 class="m-3">Pet Profile</h1>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Pet Bio</h5>
                                        <div class="col-md-9 text-secondary">
                                            Lorem ipsum dolor, sit amet consectetur adipisicing elit. 
                                            Commodi officiis provident quibusdam fuga rem magni 
                                            exercitationem vitae similique corrupti nostrum.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> --}}

                        <div style="margin-bottom: 30px;">
                            <h1>Pets</h1>
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#newPetModal" style="margin-bottom: 15px;">Add</button>
                            {{#each pets as |pet|}}
                            {{> petInfo}}
                            {{/each}}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Profile info</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="name"><b>Name</b></label>
        <input type="text" placeholder="Name" name="email" id="updatedUserName" class="form-control">
        <label for="name"><b>ZipCode</b></label>
        <input type="text" placeholder='zip' name="email" id="updatedZip" class="form-control">
        <label for="name"><b>Age</b></label>
        <input type="text" placeholder="age here" name="email" id="updatedAge" class="form-control">
        <label for="name"><b>Bio</b></label>
        <input type="text" placeholder="Tell us about yourself!" name="email" id="updatedBio" class="form-control" style="height: 70px;">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="editProfButton">Edit Profile</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="newPetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Pet Info</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="name"><b>Name</b></label>
        <input type="text" placeholder="What is your pets name?" name="email" id="newPetName" class="form-control">
        <label for="name"><b>type</b></label>
        <input type="text" placeholder='What kind of pet?' name="email" id="newPetType" class="form-control">
        <label for="name"><b>Age</b></label>
        <input type="text" placeholder="How old is your Pet" name="email" id="newPetAge" class="form-control">
        <label for="name"><b>Personality</b></label>
        <input type="text" placeholder="Describe your pets personality!" name="email" id="newPetPersonalty" class="form-control" style="height: 70px;">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="createNewPet">Add pet to profile</button>
        <div class="alert alert-danger petCreationAlert" style="margin-top: 20px; display: none;" role="alert">
            No fields can be left blank
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="/js/profilePage.js"></script>
<script src="/js/createPet.js"></script>
<script src="/js/friendRequest.js"></script>
<script src="/js/friendsList.js"></script>